@model webTemplate.Models.ViewModels.User.UserView
@{
    ViewBag.Title = Model.ID == 0 ? "Add User" : "Edit User";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<h2>@(Model.ID == 0 ? "Add User" : "Edit User")</h2>
<p></p>
@using (Html.BeginForm("Edit", "User", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <fieldset>
        @Html.Hidden("ID", Model.ID)
        @if (!Model.IsCorrectLang)
        {
            <span class="label label-important">Translate it!</span>
        }
        <div class="control-group">
            <label class="control-label" for="Email">
                Email
            </label>
            <div class="controls">
                @Html.ValidationMessage("Email")
                @Html.TextBox("Email", Model.Email)
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="FirstName">
                FirstName
            </label>
            <div class="controls">
                @Html.ValidationMessage("FirstName")
                @Html.TextBox("FirstName", Model.FirstName)
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="LastName">
                LastName
            </label>
            <div class="controls">
                @Html.ValidationMessage("LastName")
                @Html.TextBox("LastName", Model.LastName)
            </div>
        </div>
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">
                Save
            </button>
            @Html.ActionLink("Cancel", "Index", null, null, new { @class = "btn" })
        </div>
    </fieldset>
}
