@model webTemplate.Models.ViewModels.User.ForgotPasswordView
@{
    ViewBag.Title = GlobalRes.forgot_password;
    Layout = "~/Areas/Default/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("ForgotPassword", "Login", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <fieldset>
        <legend>@GlobalRes.forgot_password</legend>
        <div class="control-group">
            <label class="control-label" for="Email">
                @GlobalRes.email</label>
            <div class="controls">
                @Html.TextBox("Email", Model.Email, new { @class = "input-xlarge" })
                <p class="help-block">@GlobalRes.enter_email</p>
                @Html.ValidationMessage("Email")
            </div>
            
        </div>
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">@GlobalRes.getpassword</button>
        </div>
    </fieldset>
}