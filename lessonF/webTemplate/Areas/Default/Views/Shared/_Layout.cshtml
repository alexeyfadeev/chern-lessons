<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>

     @Styles.Render("~/Content/css")
     @Styles.Render("~/Content/css/bootstrap")
     @RenderSection("styles", false)
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
    
</head>
<body>
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <ul class="nav nav-pills pull-right">
                    @Html.Action("UserLogin", "Home")
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">@GlobalRes.language<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Url.LangSwitcher(GlobalRes.russian, ViewContext.RouteData, "ru")</li>
                            <li>@Url.LangSwitcher(GlobalRes.english, ViewContext.RouteData, "en")</li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container">
        <header>
            <div class="header-wrapper clear">
                <div class="logo">
                    <h1><a href="/">webTemplate</a></h1>
                </div>
                <div class="top-banner">
                    <a href="/"></a>
                </div>
            </div>
            <div class="subnav">
                <ul class="nav nav-pills">
                    <li class="active"><a href="/">@GlobalRes.main_page</a></li>
                </ul>
            </div>
        </header>
        <div class="row-main">
            @RenderBody()
        </div>
        <footer class="clear">
            <div class="copyright">&copy;&nbsp;@GlobalRes.all_rights_reserved</div>
        </footer>
    </div>
    @MiniProfiler.RenderIncludes()

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("header", false)
</body>
</html>
